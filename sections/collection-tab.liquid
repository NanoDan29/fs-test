    {
      "type": "header",
      "content": "Grid settings"
    },
    {
      "type": "range",
      "id": "number_of_rows",
      "label": "Rows",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "load_more_button_enable",
      "label": "Show \"Load more\"",
      "default": false
    },
    {
      "type": "select",
      "id": "button_action",
      "label": "Button action",
