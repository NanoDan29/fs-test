  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "image_picker",
      "id": "heading_logo",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "heading_logo_svg",
      "label": "Icon svg"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Gallery Images"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p></p>"
